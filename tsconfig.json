{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "ES6",
      "lib": [
        "dom",
        "dom.iterable",
        "ESNext"
      ],
      "sourceMap": true,
      "skipLibCheck": true,
      "allowJs": true,
      "jsx": "react",
      "rootDir": "src",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "noEmit": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }